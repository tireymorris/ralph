#!/usr/bin/env ruby
# frozen_string_literal: true

require_relative 'agent'

# Main execution
if __FILE__ == $PROGRAM_NAME
  if ARGV.empty? || ARGV[0] == '--help' || ARGV[0] == '-h'
    puts 'Ralph - Autonomous Software Development Agent'
    puts ''
    puts 'Usage:'
    puts '  ./ralph "your feature description"'
    puts ''
    puts 'Example:'
    puts '  ./ralph "Add user authentication with login and registration"'
    puts ''
    puts 'Requirements:'
    puts '  - opencode CLI tool installed and available'
    puts '  - Git repository'
    exit 0
  end

  prompt = ARGV.join(' ')
  Ralph::Agent.run(prompt)
end
